<apex:page standardController="Contact">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockSection columns="1">
                <apex:inputField value="{!Contact.FirstName}" label="Contact First Name"/>
                <apex:inputField value="{!Contact.LastName}" label="Contact Last Name"/>
                <apex:inputField value="{!Contact.Email}" label="Contact Email"/>
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockSection>
        	
        </apex:pageBlock>
        
    </apex:form>
</apex:page>